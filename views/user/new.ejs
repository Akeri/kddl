<% block("localCSS", "<link rel='stylesheet' href='/lib/bootstrap-select/bootstrap-select.min.css'>") %>

<style>
  .row > div {
    padding-left:0;
  }
  .row > div:last-child {
    padding-right:0;
  }
  @media screen and (max-width: 768px) {
    .row > div {
      padding-right:0;
    }
  }
</style>

<ol class="breadcrumb">
  <li><a href="/">Home</a></li>
  <li><a href="/user">User</a></li>
  <li class="active">New</li>
</ol>

<%- partial("../flash.ejs") %>

<form role="form" method="POST" action="/user/create">
  <div class="row">
    <div class="col-sm-6 col-xs-12">
			<div class="panel panel-default">
			  <div class="panel-heading">
			    <h4>Add user</h4>
			  </div>
			  <div class="panel-body">
				  <div class="form-group">
            <label for="user-email">*Email address</label>
            <div class="input-group">
              <span class="input-group-addon"><span class="glyphicon glyphicon-envelope"></span></span>
              <input name="email" type="email" class="form-control" id="user-email" placeholder="Enter email" />
            </div>
          </div>
          <div class="form-group">
            <label for="user-nickname">*Nickname</label>
            <div class="input-group">
              <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
              <input name="nickname" type="text" class="form-control" id="user-nickname" placeholder="Usual nick" />
            </div>
          </div>
          <div class="form-group">
            <label for="user-password">*Password</label>
            <div class="input-group">
              <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
              <input name="password" type="password" class="form-control" id="user-password" placeholder="Type a cool password" />
            </div>
          </div>
          <div class="form-group">
            <label for="user-passwordbis">*Confirm password</label>
            <div class="input-group">
              <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
              <input name="passwordBis" type="password" class="form-control" id="user-passwordbis" placeholder="Password again" />
            </div>
          </div>
			  </div>
		  </div>
		</div>
		<div class="col-sm-6 col-xs-12">
			<div class="panel panel-default panel-body">
				<div class="form-group">
			    <label for="user-role">*Role</label><br />
			    <select name="role" id="user-role">
			      <% _.each(sails.services.rolemanager.getRoleKeys(), function(roleKey){ 
			        var role = sails.services.rolemanager.getRoleByKey(roleKey); %>
			        <option data-description="<%- role.description %>" value="<%- roleKey %>" <% if (roleKey == "trial"){ %> selected="selected" <% } %>>
			          <%- role.label %>
			        </option>
			      <% }) %>
			    </select>
			  </div>
			  <div id="role-description">
		      Role description
		    </div>
			</div>
			<div class="panel panel-default panel-body">
			  <div class="form-group">
			    <label for="user-captions">Labels to show on profile</label><br />
			    <div class="input-group">
			      <span class="input-group-addon"><span class="glyphicon glyphicon-tags"></span></span>
			      <input name="captions" type="text" class="form-control" id="user-captions" placeholder="separated by commas" />
			    </div>
			  </div>
			</div>
		</div>
	</div>
	<input type="hidden" name="_csrf" value="<%= _csrf %>" />
	<div class="btn-toolbar">
	  <button type="submit" class="btn btn-lg btn-success">Submit</button>
	</div>
</form>

<% block("localScripts", "<script src='/lib/bootstrap-select/bootstrap-select.min.js'></script>") %>
<% block("localScripts", "<script src='/dynamics/user/new.js'></script>") %>