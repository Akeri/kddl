<%
var args = _.extend({
  playerArmor : null,
  className   : ""
}, data || {});
%>

<div class="player-armor-card <%- args.className %>" data-maketooltip data-toggle="tooltip" title="<%= args.playerArmor.armor.name %>">
  <div class="panel panel-default panel-body" style="text-align:center;">
    <span class="elements hidden-xs"><%- Armor.getElemIcons(args.playerArmor.armor.elements) %></span>
    <% if (args.playerArmor.plus === true){ %><span class="label-plus label label-info">plus</span><% } %>
    <img src="<%- args.playerArmor.armor.mainPic || args.playerArmor.armor.secondaryPic || args.playerArmor.armor.defaultPic %>" />
    <div class="player-armor-card-name">
      <span class="text-primary"><%= args.playerArmor.armor.name %><% if (args.playerArmor.plus === true){ %>+<% } %></span>
    </div>
    <div class="progress">
		  <div class="progress-bar progress-bar-<%- args.playerArmor.level == args.playerArmor.armor.maxLevel ? 'success' : 'warning' %>"
		  role="progressbar"
		  aria-valuenow="<%- args.playerArmor.level %>"
		  aria-valuemin="1" aria-valuemax="100"
		  style="width:<%- (args.playerArmor.level * 100) / args.playerArmor.armor.maxLevel %>%;">
		    <span><%- args.playerArmor.level %></span>
		  </div>
		</div>
  </div>
</div>